{
	"name": "writer-buddy",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx scripts/migrate.ts",
		"db:migrate-data": "tsx scripts/migrate-data.ts",
		"db:test": "tsx scripts/test-connection.ts",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"docker:up": "flatpak-spawn --host docker compose up -d || docker-compose up -d",
		"docker:down": "flatpak-spawn --host docker compose down || docker-compose down",
		"docker:reset": "flatpak-spawn --host docker compose down -v && flatpak-spawn --host docker compose up -d"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/better-sqlite3": "^7.6.11",
		"@types/node": "^24.1.0",
		"@types/pg": "^8.11.2",
		"better-sqlite3": "^11.8.0",
		"dotenv": "^17.2.1",
		"drizzle-kit": "^0.31.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.19.2",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4"
	},
	"dependencies": {
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@tiptap/core": "^3.0.7",
		"@tiptap/extension-character-count": "^3.0.7",
		"@tiptap/extension-color": "^3.0.7",
		"@tiptap/extension-highlight": "^3.0.7",
		"@tiptap/extension-text-style": "^3.0.7",
		"@tiptap/extension-underline": "^3.0.7",
		"@tiptap/starter-kit": "^3.0.7",
		"drizzle-orm": "^0.44.3",
		"lucide-svelte": "^0.526.0",
		"nanoid": "^5.1.5",
		"openai": "^5.10.1",
		"postgres": "^3.4.5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}